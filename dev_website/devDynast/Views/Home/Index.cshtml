<script>
    function addToCart(productId, price) {
        $.ajax({
            url: '@Url.Action("AddToCart", "Cart")',  // The controller action URL
            method: 'POST',
            data: {
                productId: productId,
                price: price
            },
            success: function(response) {
                if (response.success) {
                    alert(response.message);  // Notify user
                } else {
                    alert('Error: ' + response.message);
                }
            },
            error: function() {
                alert('An error occurred while adding item to the cart.');
            }
        });
    }
</script>

