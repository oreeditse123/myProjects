<script>
    function addToCart(productId, price) {
        $.ajax({
            url: '@Url.Action("addToCart", "User")',  // The controller action URL
            method: 'POST',
            data: {
                productId: productId,
                price: price
            },
            success: function(response) {
                if (response.success) {
                    showToast(response.message);  // Show success message via toast
                } else {
                    showToast('Error: ' + response.message, true);  // Show error message via toast
                }
            },
            error: function() {
                showToast('An error occurred while adding the item to the cart.', true);  // Error case
            }
        });
    }

    // Function to show toast
    function showToast(message, isError = false) {
        var toastBody = document.querySelector('#cartToast .toast-body');
        var toastHeader = document.querySelector('#cartToast .me-auto');

        // Update the toast message and title (Success or Error)
        toastBody.textContent = message;
        toastHeader.textContent = isError ? 'Error' : 'Success';

        // Optionally, you can add some CSS styling for error cases
        var toastElement = new bootstrap.Toast(document.getElementById('cartToast'));
        toastElement.show();
    }
</script>

