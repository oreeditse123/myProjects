    <div class="card">
        <div class="card-body">
            <div class="form-group">
                <label for="timeFrameSelect">Select Time Frame:</label>
                <select id="timeFrameSelect" class="form-control">
                    <option value="weekly">Weekly</option>
                    <option value="monthly">Monthly</option>
                    <option value="yearly">Yearly</option>
                </select>
            </div>
            <button id="generateReportButton" class="btn btn-primary mb-3">Generate Report</button>
            
            <!-- Search Input -->
            <div class="input-group mb-3">
                <input type="text" id="searchInput" placeholder="Search by Name or Email" class="form-control" />
                <div class="input-group-append">
                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                </div>
            </div>

            <!-- Loading message -->
            <div id="loadingMessage" class="alert alert-info" style="display:none;">Loading...</div>

            <!-- No data message -->
            <div id="noDataMessage" class="alert alert-warning" style="display:none;">No data available for the selected time frame.</div>

            <!-- Customer Frequency Table -->
            <table id="customerFrequencyTable" class="table table-striped mt-4" style="display:none;">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Purchase Count</th>
                        <th>Segment</th>
                        <th>Last Purchase Date</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Data will be dynamically inserted here -->
                </tbody>
            </table>

            <!-- Line Chart for Trends -->
            <div class="mt-4">
                <canvas id="purchaseTrendsChart" width="400" height="200" style="display:none;"></canvas>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<script>
    $(document).ready(function () {
        let purchaseTrendsChart; // Variable to hold the chart instance

        $('#generateReportButton').click(function () {
            var timeFrame = $('#timeFrameSelect').val();
            
            // Show loading message and hide table/no data message
            $('#loadingMessage').show();
            $('#customerFrequencyTable').hide();
            $('#noDataMessage').hide();
            $('#purchaseTrendsChart').hide(); // Hide chart initially

            // Fetch data from the controller using the selected time frame
            fetch(`/Admin/GetCustomerPurchaseFrequency/${timeFrame}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    $('#loadingMessage').hide(); // Hide loading message
                    var tbody = $('#customerFrequencyTable tbody');
                    tbody.empty(); // Clear existing data
                    
                    if (data.length > 0) {
                        // Show table if data is available
                        $('#customerFrequencyTable').show();

                        // Prepare data for the line chart 
                        const purchaseDates = data.map(item => new Date(item.lastPurchaseDate).toLocaleDateString());
                        const purchaseCounts = data.map(item => item.purchaseCount);

                        // Destroy the previous chart instance if it exists
                        if (purchaseTrendsChart) {
                            purchaseTrendsChart.destroy();
                        }

                        // Create the line chart
                        var ctx = document.getElementById('purchaseTrendsChart').getContext('2d');
                        purchaseTrendsChart = new Chart(ctx, {
                            type: 'line',
                            data: {
                                labels: purchaseDates,
                                datasets: [{
                                    label: 'Purchase Trends',
                                    data: purchaseCounts,
                                    borderColor: 'rgba(75, 192, 192, 1)',
                                    borderWidth: 2,
                                    fill: false
                                }]
                            },
                            options: {
                                scales: {
                                    y: {
                                        beginAtZero: true,
                                        title: {
                                            display: true,
                                            text: 'Number of Purchases'
                                        }
                                    },
                                    x: {
                                        title: {
                                            display: true,
                                            text: 'Date'
                                        }
                                    }
                                }
                            }
                        });
                        $('#purchaseTrendsChart').show(); // Show the chart

                        // Loop through the data and insert rows into the table
                        data.forEach(function (item) {
                            var row = `<tr>
                                <td>${item.firstName}</td>
                                <td>${item.lastName}</td>
                                <td>${item.email}</td>
                                <td>${item.purchaseCount}</td>
                                <td>${item.segment}</td>
                                <td>${new Date(item.lastPurchaseDate).toLocaleDateString()}</td>
                            </tr>`;
                            tbody.append(row);
                        });
                    } else {
                        // Show no data message if data is empty
                        $('#noDataMessage').show();
                    }
                })
                .catch(error => {
                    console.error("Error fetching report data:", error);
                    alert("An error occurred while fetching the report data.");
                    $('#loadingMessage').hide(); // Hide loading message
                });
        });

        // Search functionality
        $('#searchInput').on('input', function () {
            var searchValue = $(this).val().toLowerCase();
            $('#customerFrequencyTable tbody tr').filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(searchValue) > -1);
            });
        });
    });
</script>













