</style>

<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Date</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="/database/images/menus/@item.Category/@item.ProductImage" alt="@item.ProductName"/>
                    @item.ProductName
                </td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C", new CultureInfo("en-ZA"))</td>
                <td>@item.Date.ToString("g")</td>
                <td>@item.Status</td>
                <td>
                    <form method="post" action="@Url.Action("UpdateOrderStatus", "Cart")">
                        <input type="hidden" name="cartId" value="@item.Id" />
                        <select name="status" required>
                            <option value="">Select Status</option>
                            <option value="order received">Order Received</option>
                            <option value="order ready">Order Ready</option>
                        </select>
                        <button type="submit">Update Status</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

